@using Inventar.ViewModels.Login_Register
@model RegisterViewModel
<link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Sign up";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p>
            <h4 class="naslov" style="text-align:center">@Inventar.Resources.Resource.CreateAccount</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label">@Inventar.Resources.Resource.FirstName</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label">@Inventar.Resources.Resource.LastName</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label">@Inventar.Resources.Resource.EmailAddress</label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">@Inventar.Resources.Resource.Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label">@Inventar.Resources.Resource.ConfirmPassword</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group radioDiv">
                        <div class="row" style="height:100%">
                            <div class="form-check col" style="display: flex; align-items: center; justify-content:center">
                                <input class="form-check-input" type="radio" name="UserRole" asp-for="UserRole" value="user" id="user" checked>
                                <label class="form-check-label" for="cash" style="padding-left:1rem">
                                    User
                                </label>
                            </div>
                            <div class="form-check col" style="display: flex; align-items: center; justify-content:center">
                                <input class="form-check-input" type="radio" name="UserRole" asp-for="UserRole" value="employee" id="employee">
                                <label class="form-check-label" for="virman" style="padding-left:1rem">
                                    Radnik
                                </label>
                            </div>
                            <div class="form-check col" style="display: flex; align-items: center; justify-content:center">
                                <input class="form-check-input" type="radio" name="UserRole" asp-for="UserRole" value="admin" id="admin">
                                <label class="form-check-label" for="waiting" style="padding-left:1rem">
                                    Admin
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="form-check col" style="display: flex; align-items: center; justify-content:center">
                                <input id="confirmBtn" class="btn btn-outline-success float-right" type="submit" value="Confirm" />
                            </div>
                            <div class="form-check col" style="display: flex; align-items: center; justify-content:center">
                                <a class="btn btn-outline-secondary otkaziBtn" asp-controller="Home" asp-action="Index">@Inventar.Resources.Resource.Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>